<h1>Add a definition!</h1>

<h3>Add a definition for <%= @word.word() %></h3>



<form id="add_definition" action="/word" method="post">
  <input id='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>
  <div class="form-group">
    <label for="definition">definition</label>
    <input id="definition" type="text" name="definition" class="form-control">
  </div>
  <button type="submit" class="btn-primary">Add</button>
</form>
